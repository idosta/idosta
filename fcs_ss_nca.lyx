\begin_layout Standard
Under the assumption that at steady state the vertex function depends only
 on the difference between its two time arguments, and the initial state
 does not matter,
\begin_inset Formula $K_{\alpha}^{\beta}\left(t,t'\right)\underset{t,t'\rightarrow\infty}{\rightarrow}K^{\beta}\left(t-t'\right)$
\end_inset

.
 the vertex function at steady state must obey:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
K^{\beta}\left(t\right)=\intop_{-\infty}^{t}d\tau\intop_{\tau}^{\infty}d\Delta G_{\beta}^{*}\left(t-\tau\right)G_{\beta}\left(\Delta-\tau\right)\sum_{\gamma}\xi_{\gamma}^{\beta}\left(\Delta\right)K^{\gamma}\left(\Delta\right)
\]

\end_inset


\end_layout

\begin_layout Standard

\end_layout

\begin_layout Part*
2 Full Counting Statistics for steady state equation
\end_layout

\begin_layout Standard
\begin_inset Formula $\sum_{\alpha,\beta}K_{\alpha}^{\beta}(t_{a}+t,t_{a})=\sum_{\alpha,\beta}K_{\alpha}^{\beta}(t_{b}+t,t_{b})\cdot e^{c\left(t_{b}-t_{a}\right)}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\Delta=\tau-\tau`,\tau_{1}=\tau-t_{max}$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $=\sum_{\gamma\delta}\int_{-t_{max}}^{t}d\tau_{1}G_{\delta}^{*}(t-\tau_{1})\intop_{\tau_{1}}^{t_{max}+\tau_{1}}d\Delta G_{\beta}(\Delta-\tau_{1})\xi_{\gamma}^{\delta}(\Delta)K_{\alpha}^{\delta}(t_{max}+\tau_{1},t_{max}+\tau_{1}-\Delta)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\varLambda=-\Delta$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\sum_{\gamma\delta}\int_{-t_{max}}^{t}d\tau_{1}G_{\delta}^{*}(t-\tau_{1})\intop_{-t_{max}-\tau_{1}}^{-\tau_{1}}d\varLambda G_{\beta}(-\varLambda-\tau_{1})\xi_{\gamma}^{\delta}(-\varLambda)K_{\alpha}^{\delta}(t_{max}+\tau_{1},t_{max}+\tau_{1}+\varLambda)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\sum_{\gamma\delta}\int_{-t_{max}}^{t}d\tau_{1}G_{\delta}^{*}(t-\tau_{1})\intop_{-t_{max}-\tau_{1}}^{-\tau_{1}}d\varLambda G_{\beta}(-\varLambda-\tau_{1})\xi_{\gamma}^{\delta}(\varLambda){}^{*}*K_{\alpha}^{\delta}(t_{max}+\varLambda,t_{max})*e^{c*(\tau_{1}-\varLambda)}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $f_{c}(x)=e^{c*x}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\sum_{\gamma\delta}\int_{-t_{max}}^{t}d\tau_{1}G_{\delta}^{*}(t-\tau_{1})e^{c*\tau_{1}}*G_{\beta}\star(\xi_{\gamma}^{\delta}{}^{*}*K_{\alpha}^{\delta}*f_{-c})(-\tau_{1})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $H_{\beta\alpha\gamma\delta}(\tau_{1})=G_{\beta}\star(\xi_{\gamma}^{\delta}{}^{*}*K_{\alpha}^{\delta}*f_{-c})(-\tau_{1})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\sum_{\gamma\delta}G_{\delta}^{*}\star(f_{c}*H_{\beta\alpha\gamma\delta})(t)$
\end_inset


\end_layout

